<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<%	if (locals.user != undefined) {	%>
		<%- include('./partials/headerLogeado')  %>
		<% } %> 
		<% if(locals.user == undefined)	{ %>
			<%- include('./partials/headerDeslogeado')  %>
		<%	}	%>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner">
		<img src="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i <listaProduct.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box"> 	 	
						<a href="/product/productAdd/<%= listaProduct[i].id %>">Modificar</a>
						| <a href="/product/deleteProduct/<%= listaProduct[i].id %>">Eliminar</a>
						<figure class="product-box_image">
							<a href="/product/id/<%= listaProduct[i].id %> "><img class="product-img" src="<%= listaProduct[i].image %> "</a>
								alt="<%=// producto[i].nombreProducto %>">

						</figure>
						
						<article class="product-box_data">
							<a href="/product/id/<%= listaProduct[i].id %> "><h2><%= listaProduct[i].brand + ' ' + listaProduct[i].model + ' ' + listaProduct[i].variant %></h2></a>
							<p><a href="/product/id/<%= listaProduct[i].id %> "><%= listaProduct[i].year + ' - ' + listaProduct[i].description %></p></a>
							<p></p>
						</article>
			
				</section>
			</div>
			<% } %>

		</div>
	</div>
	<!-- /MÃ¡s comentados -->


	<!-- footer -->
	<%- include('./partials/footer')  %>
	<!-- /footer -->
</body>

</html>