<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<%	if (locals.user != undefined) {	%>
		<%- include('./partials/headerLogeado')  %>
		<% } %> 
		<% if(locals.user == undefined)	{ %>
			<%- include('./partials/headerDeslogeado')  %>
		<%	}	%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= locals.user.profile_img %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> Bienvenido a tu perfil <%= locals.user.name  %>
						<a class="boton-profile-edit" href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class=""> 
						<li> Email: <%= locals.user.email%></li>
						<li> Fecha de Nacimiento:<%= locals.user.date%></li>
						<li> DNI:<%= locals.user.dni%></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	
	


	<!-- footer -->
	<%- include('./partials/footer')  %>
			<!-- /footer -->
</body>

</html>