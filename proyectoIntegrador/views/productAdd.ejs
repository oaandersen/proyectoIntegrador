<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<%	if (locals.user != undefined) {	%>
	<%- include('./partials/headerLogeado')  %>
	<% } %>
	<% if(locals.user == undefined)	{ %>
	<%- include('./partials/headerDeslogeado')  %>
	<%	}	%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="productAdd">
				<h2 class="col-12">
					<form action="/product/productAdd" method="POST" enctype="multipart/form-data">
						<label for="imagen">Imagen del auto</label>
						<input id="imagen" type="file" name="imagen">
				</h2>
				<h2 class="col-12">
					<label for="brand">Marca:</label>
					<input id="brand" type="text" name="brand">
				</h2>
				<h2 class="col-12">
					<label for="model">Modelo:</label>
					<input id="model" type="text" name="model">
				</h2>
				<h2 class="col-12">
					<label for="variant">Variante:</label>
					<input id="variant" type="text" name="variant">
				</h2>
				<h2 class="col-12">
					<label for="year">Año:</label>
					<input id="year" type="text" name="year">
				</h2>
				<h2 class="col-12">
					<label for="description">Descripción:</label>
					<input id="description" type="text" name="description">
				</h2>
				<button class="div-users, botonesVarios" type="text" class="submit">Subir</button>
				</form>
				</h2>
			</div>

			<!-- footer -->
			<%- include('./partials/footer')  %>
			<!-- /footer -->
</body>

</html>